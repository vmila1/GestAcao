<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.GestAcao" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <style name="Theme.GestAcao.NoActionBar" parent="Base.Theme.GestAcao">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.GestAcao" parent="Base.Theme.GestAcao">
        <!-- Se você quiser recriar o estilo "DarkActionBar" para as ActionBars
             que APARECEM em outras Activities (NÃO na MainActivity):
        <item name="actionBarTheme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
        <item name="colorPrimaryDark">@color/your_dark_primary_color_for_status_bar</item>
        -->
    </style>
</resources>