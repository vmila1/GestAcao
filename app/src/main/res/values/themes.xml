<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema Base para o Modo Claro -->
    <style name="Base.Theme.GestAcao" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Sua cor de marca primária -->
        <item name="colorPrimary">@color/pink_gest</item>
        <item name="colorPrimaryVariant">@color/pink_gest</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Cor secundária -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Cor da barra de status -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Tema principal que herda do Base -->
    <style name="Theme.GestAcao" parent="Base.Theme.GestAcao" />

    <!-- Tema sem ActionBar (para sua MainActivity) -->
    <style name="Theme.GestAcao.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>